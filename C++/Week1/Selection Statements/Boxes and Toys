#include <bits/stdc++.h>
  using namespace std;
  
  int main()
  {
    int n;
    cin>>n;
    
    int sum=0;
    for(int i=1;i<=n;i++){
      int t;
      int c;
      cin>>t;
      cin>>c;
      if((c-t)>=2){
        sum=sum+1;
      }
      else{
        sum=sum+0;
      }
    }
    cout<<sum;
    
    return 0;
  }
