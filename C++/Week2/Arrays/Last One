#include <bits/stdc++.h>
  using namespace std;
  
  int main()
  {
    //write your code here
    int t;
    cin>>t;
    while(t!=0){
    int n;
    cin>>n;
    int i;
    int arr[n];
    for( i=0;i<n;i++){
      cin>>arr[i];
    }
    
  bool flag=false;
	int index;
	for(int i=0;i<n;i++){
		if(arr[i]==1){
			flag=true;
			index=i;
		}
	}
	if(flag){
		cout<<index<<endl;
	}
	else{
		cout<<-1;
	}
    t=t-1;
    }
    return 0;
  }
