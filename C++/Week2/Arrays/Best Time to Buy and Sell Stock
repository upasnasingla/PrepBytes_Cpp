#include <bits/stdc++.h>
  using namespace std;

  int main()
  {
    //write your code here


    int t;
    cin>>t;

    while(t--){

      int n;
      cin>>n;

      int arr[n];


      for(int i=0;i<n;i++){

        cin>>arr[i];

      }


    int mini=INT_MAX;

    int ans=0;

    for(int i=0;i<n;i++)
    {
            if(arr[i] < mini){
                mini = arr[i];
            }


            int profit = arr[i] - mini;

            ans = max(ans , profit);

    }

    cout<<ans<<endl;

    }

    return 0;
  }
